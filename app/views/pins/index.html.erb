<h1>Listing pins</h1>
<%= link_to 'Delete All Pins', Pin, method: :delete, data: {confirm: "Are you sure?'} %>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.name %></td>
        <td><%= pin.image_tag(pin.image, width: '100%') %></td>
        <td><%= pin.user.full_name %></td>
        <td><%= pin.board.name %></td>
        <td><%= link_to 'Show', pin %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

